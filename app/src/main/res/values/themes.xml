    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#F44336</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#4CAF50</item>
    </style>

    <style name="HeaderStyle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/news_gothic</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubHeaderStyle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/news_gothic_bq_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BigHeaderStyle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/news_gothic_std_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleHeaderStyle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/news_gothic_std_bold_oblique</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
